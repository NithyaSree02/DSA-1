    <div class="contact">
        <h1 class="contact_h1" style="font-size: 40px; ">CONTACT US</h1>
        <p class="contact_p">Eager to hear!</p>
        <br><br>

        <div class="loc-box">
            <div class="location">
                <h2>VISIT US <i class="fas fa-map-marker-alt"></i></h2>
                <p class="box1">
                   Nagapattinam - Coimbatore - Gundlupet Hwy, 
				   Mettupalayam, 
				   Tamil Nadu 
				   641305

                </p>
                <h2>CONTACT</h2>
                <div class="box2">
                    <p><i class="fas fa-phone"></i> <b>Phone:</b> +91 1234567890</p>
                    <p><i class="fas fa-envelope"></i> <b>Email:</b> thrilltopia@gmail.com</p>
                </div>
            </div>
    
            <div class="contact-box">
                <h1>Send Message</h1>
                <form action="mailto:thrilltopia@gmail.com" method="post" enctype="text/plain">
                    <div class="form-group">
                        <label for="full-name">Full Name</label>
                        <input type="text" id="full-name" name="full-name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="message">Type Your Message</label>
                        <textarea id="message" name="message" required></textarea>
                    </div>
                    <input type="submit" value="Send">
                </form>
            </div>
        </div>
    </div>   
    
